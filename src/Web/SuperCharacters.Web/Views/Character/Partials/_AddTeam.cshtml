@model SuperCharactersApp.ViewModels.DTO.TeamViewModels.TeamViewModel

<div class="form-group col-md-3"></div>
<form id="addTeamForm" class="register-form mx-auto half-width text-center d-flex flex-wrap justify-content-between"
 asp-controller="Team" asp-action="Create" method="post">
