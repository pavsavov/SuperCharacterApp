@model SuperCharactersApp.ViewModels.DTO.CharacterViewModels.CharacterViewModel

@{
    ViewData["Title"] = "Create";

}

<main class="mt-3">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form class="register-form form-row text-center" name="createCharacter" method="post" asp-controller="Character" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row col-md-12">
            <div class="form-group col-md-3 ">
                <label asp-for="CharacterType"></label>
                <input asp-for="CharacterType" type="text" class="form-control" placeholder="Character type..." `>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Armour"></label>
                <input asp-for="Armour" type="number" class="form-control" name="armour" placeholder="Armour...">

            </div>
            <div class="form-group col-md-3">
                <label asp-for="HitPoints"></label>
                <input asp-for="HitPoints" type="number" step="0.1" class="form-control" placeholder="Hitpoints...">
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Damage"></label>
                <input asp-for="Damage" type="number" class="form-control" placeholder="Damage...">
            </div>
        </div>
        <div class="row col-md-12">
            <div class="form-group col-md-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" data-val-required="The name is required" type="text" class="form-control" placeholder="Name...">
            </div>
            <div class="form-group col-md-3">
                <label for="Team">Select Team</label>
                <select class="form-control" id="Team" name="TeamId">
                    <option value="">-- Select Team --</option>
                    @foreach (var team in @Model.Teams)
                    {
                        <option value="@team.Id" name="TeamId">@team.Name</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SuperPowers"></label>
                <input asp-for="SuperPowers" type="number" class="form-control" placeholder="Superpowers...">
            </div>
            <div class="form-group col-md-3">
                <label asp-for="SecretIdentity"></label>
                @if (Model.SecretIdentity != null)
                {
                    <input asp-for="SecretIdentity" type="text" class="form-control" name="SecretIdentity" placeholder="Secret Identity..."
                           value="@Model.SecretIdentity.FirstName @Model.SecretIdentity.LastName">
                }
                else
                {
                    <input asp-for="SecretIdentity" type="text" class="form-control" placeholder="Secret Identity..." />

                }
            </div>
        </div>
        <div class="button-holder">
            <button type="submit" id="submit" class="btn eventure-bg-color">Create</button>
        </div>
    </form>
</main>
