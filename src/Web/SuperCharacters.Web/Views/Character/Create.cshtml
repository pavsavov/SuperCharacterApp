@model SuperCharactersApp.ViewModels.DTO.CharacterViewModels.CharacterViewModel

@{
    ViewData["Title"] = "Create";
}

<main class="mt-3">
    <h1 class="text-center">@ViewData["Title"]</h1>
    @*<hr class="hr-2 eventure-bg-color half-width" />*@
    <form class="register-form mx-auto half-width text-center d-flex flex-wrap justify-content-between" method="post" asp-controller="Character" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group ">
                <label asp-for="CharacterType"></label>
                <input asp-for="CharacterType" type="text" class="form-control" placeholder="Character type..." `>
                <span asp-validation-for="CharacterType" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Armour"></label>
                <input asp-for="Armour" type="number" class="form-control" placeholder="Armour...">
                <span asp-validation-for="Armour" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label asp-for="HitPoints"></label>
                <input asp-for="HitPoints" type="number" class="form-control" placeholder="Hitpoints...">
                <span asp-validation-for="HitPoints" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Damage"></label>
                <input asp-for="Damage" type="number" class="form-control" placeholder="Damage...">
                <span asp-validation-for="Damage" class="text-danger field-validation-valid"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label for="selectTeam">Select Team</label>
                <select class="form-control" id="selectTeam">
                    @*<form method="post" asp-controller="Team" asp-action="Create">
                        <option>Create new team</option>
                    </form>*@
                    @foreach (var team in @Model.Teams)
                    {
                        <option>@team.Name</option>
                    }
                </select>
                @*<label asp-for="Team"></label>
                    <input asp-for="Team" type="text" class="form-control" placeholder="Team..."> @*Dropdown of teams or CreateNew Team at the begining*@
                @*<span asp-validation-for="Team" class="text-danger field-validation-valid"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="SecretIdentity"></label>
                <input asp-for="SecretIdentity" type="text" class="form-control" placeholder="SecretIdentity...">
                <span asp-validation-for="SecretIdentity" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuperPowers"></label>
                <input asp-for="SuperPowers" type="text" class="form-control" placeholder="SuperPowers...">      @*Dropdown of teams or CreateNew Team at the begining*@
                <span asp-validation-for="SuperPowers" class="text-danger field-validation-valid"></span>
            </div>
        </div>
        <div class="row">
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn eventure-bg-color">Create</button>
            </div>
        </div>
    </form>
</main>