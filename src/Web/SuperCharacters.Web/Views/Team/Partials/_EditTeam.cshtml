@model SuperCharactersApp.ViewModels.DTO.TeamViewModels.TeamViewModel

<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit the chosen team</h5>
            </div>
            <div class="modal-footer">
                <form method="post" asp-controller="Team" asp-action="Edit" id="editModal">
                    <div class="col-lg-12">
                        <label asp-for="TeamName">Team name</label>
                        <input asp-for="TeamName" name="TeamName" class="form-control" />
                        <input asp-for="Id" name="Id" type="hidden" class="form-control" />
                    </div>
                    <div class="col-lg-6">
                        <button type="submit" value="@Model.TeamName" id="edit-@Model.TeamName"  class="btn btn-primary">
                            Save changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


