@model SuperCharactersApp.ViewModels.DTO.TeamViewModels.TeamViewModel

@{
    ViewData["Title"] = "Create";
}

<main class="mt-3">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form class="register-form mx-auto half-width text-center d-flex flex-wrap justify-content-between" method="post" asp-controller="Team" asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row col-md-12">
            <div class="form-group col-md-6 ">
                <label asp-for="TeamName"></label>
                <input asp-for="TeamName" type="text" class="form-control" placeholder="Team name..." `>
            </div>
        </div>
        <div class="button-holder col-md-6">
            <button type="submit" class="btn">Create</button>
        </div>
    </form>
</main>