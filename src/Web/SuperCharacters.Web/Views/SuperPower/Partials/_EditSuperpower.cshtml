@model SuperCharactersApp.ViewModels.DTO.SuperPowerViewModels.SuperPowersListingViewModel

<div class="modal fade modal-lg" id="editSuperpower-@Model.Id" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit the chosen team</h5>
            </div>
            <form method="post" asp-controller="Superpower" asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="modal-footer">
                    <row>
                        <div class="col-xs-4">
                            <select class="form-control" name="Type">
                                <option value="Damage">Damage</option>
                                <option value="Heal">Heal</option>
                                <option value="Armour">Armour</option>
                                <option value="Damage Multiplier">Damage Multiplier</option>
                            </select>
                        </div>
                        <div class="col-xs-4">

                            <input asp-for="Value" name="Value" type="number" step="0.1" class="form-control" />
                        </div>
                        <div class="col-xs-4">
                            <input asp-for="SuperPowerName" name="SuperPowerName" class="form-control" />
                        </div>
                        <input asp-for="Id" name="Id" type="hidden" class="form-control" />
                </div>
                <row>
                    <button type="submit" id="edit-@Model.SuperPowerName" onclick="cancelForm()" class="btn btn-primary">
                        Save changes
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <row>
            </form>
        </div>
    </div>
</div>

<script>
    cancelForm = function () {
        window.location.replace('/SuperPower/ListSuperpowers')
    }
</script>
