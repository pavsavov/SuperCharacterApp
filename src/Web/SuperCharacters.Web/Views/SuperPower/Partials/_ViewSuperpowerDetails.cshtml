@model SuperCharactersApp.ViewModels.DTO.SuperPowerViewModels.SuperPowersListingViewModel

<div class="modal fade" id="detailsSuperpower-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-header">
                <h5 class="modal-title">Edit the chosen Superpower</h5>
            </div>
            <div class="row col-md-12">
                <div class="form-group col-md-4 ">
                    <label asp-for="SuperPowerName">@Model.SuperPowerName</label>
                </div>
                <div class="form-group col-md-4 ">
                    <label asp-for="Type">@Model.Type</label>
                </div>
                <div class="form-group col-md-4 ">
                    <label asp-for="Value">@Model.Value</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="cancelForm()" class="btn btn-outline-primary">
                    Back
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    cancelForm = function () {
        window.location.replace('/SuperPower/ListSuperpowers')
    }
</script>