@model SuperCharactersApp.ViewModels.DTO.SuperPowerViewModels.CreateSuperPowerViewModel
@{
    ViewData["Title"] = "Create";
    ;
}

<main class="mt-3">
    <h1 class="text-center">@ViewData["Title"]</h1>
    @*<hr class="hr-2 eventure-bg-color half-width" />*@
    <form class="register-form mx-auto half-width text-center d-flex flex-wrap justify-content-between" method="post" asp-controller="Superpower" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row col-md-12">
            <div class="form-group col-md-4 ">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name..." `>
            </div>
            <div class="form-group col-md-4">
                <label for="Type">Select type of superpower</label>
                <select asp-for="Type">
                    <option value="1">Damage</option>
                    <option value="2">Heal</option>
                    <option value="3">Armour</option>
                    <option value="4">Damage Multiplier</option>
                </select>
            </div>
            <div class="form-group col-md-4 ">
                <label asp-for="Value"></label>
                <input asp-for="Value" type="number" step="0.1" class="form-control" placeholder="Value..." `>
            </div>
        </div>
        <div class="button-holder col-md-6">
            <button type="submit" class="btn eventure-bg-color">Create</button>
        </div>
    </form>
</main>

