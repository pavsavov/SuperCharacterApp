@model SuperCharactersApp.ViewModels.DTO.SuperPowerViewModels.SuperPowerViewModel
@{
    ViewData["Title"] = "Create";
    ;
}

<main class="mt-3">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form class="register-form mx-auto half-width text-center d-flex flex-wrap justify-content-between" method="post" asp-controller="Superpower" asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row col-md-12">
            <div class="form-group col-md-4 ">
                <label asp-for="SuperPowerName"></label>
                <input asp-for="SuperPowerName" type="text" class="form-control" placeholder="Name..." `>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Type">Select type of superpower</label>
                <select >
                    <option value="Damage">Damage</option>
                    <option value="Heal" >Heal</option>
                    <option value="Armour" >Armour</option>
                    <option value="Damage Multiplier">Damage Multiplier</option>
                </select>
            </div>
            <div class="form-group col-md-4 ">
                <label asp-for="Value"></label>
                <input asp-for="Value" type="number" step="0.1" class="form-control" placeholder="Value..." `>
            </div>
        </div>
        <div class="button-holder col-md-6">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</main>

